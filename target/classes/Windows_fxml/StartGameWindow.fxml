<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>


<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.Group?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="mainWindow.Controllers.StartGameWindowController"
            prefHeight="400.0" prefWidth="600.0">
    <headerText>Podaj dane hosta jezeli chcesz grac online lub zaznacz gre offline</headerText>
    <content>
        <GridPane>
            <columnConstraints >
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <VBox GridPane.columnIndex="0" alignment="CENTER" style="-fx-border-color: navy; -fx-border-width: 2">
                <CheckBox fx:id="offlineCheckBox" text="Graj offline"  />
            </VBox>

            <VBox GridPane.columnIndex="1"  style="-fx-border-color: blue; -fx-border-width: 2">
                <Label text="Port: " GridPane.rowIndex="0" />
                <TextField fx:id="port"  GridPane.rowIndex="0" />
                <Label text="Adres IP: "  GridPane.rowIndex="1" />
                <TextField fx:id="adressIP" GridPane.rowIndex="1" />
            </VBox>

            <VBox GridPane.rowIndex="1" GridPane.columnSpan="2" spacing="15" prefHeight="150" style="-fx-border-color: black; -fx-border-width: 2" alignment="BASELINE_CENTER">
                <Label text="Wybierz poziom trudnosci: "/>
                <fx:define>
                    <ToggleGroup fx:id="diffLvLGroup" />
                </fx:define>
                <RadioButton fx:id="easyDiff" text="Latwy" toggleGroup="$diffLvLGroup"  alignment="TOP_CENTER"/>
                <RadioButton fx:id="mediumDiff" text="Sredni" toggleGroup="$diffLvLGroup" alignment="CENTER"/>
                <RadioButton fx:id="hardDiff" text="Trudny" toggleGroup="$diffLvLGroup" alignment="BOTTOM_CENTER"/>

            </VBox>

        </GridPane>

    </content>

</DialogPane>
